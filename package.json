{
  "name": "node-sea-boilerplate",
  "version": "1.0.0",
  "type": "module",
  "description": "Boilerplate for Node.js single executable applications",
  "scripts": {
    "check": "biome check --write src && tsc --noEmit",
    "exec": "npm run _bundle && node build/main.cjs",
    "build": "npm run check && npm run _bundle && npm run _copy-node && npm run _prepare-blob && npm run _inject-blob",
    "_bundle": "esbuild --platform=node --bundle --minify --outfile=build/main.cjs src/main.ts",
    "_copy-node": "cp $(which node) build/app",
    "_prepare-blob": "node --experimental-sea-config sea-config.json",
    "_inject-blob": "postject build/app NODE_SEA_BLOB build/sea-prep.blob --sentinel-fuse NODE_SEA_FUSE_fce680ab2cc467b6e072b8b5df1996b2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@tsconfig/node-lts": "^22.0.2",
    "@types/node": "^24.2.1",
    "esbuild": "^0.25.8",
    "postject": "^1.0.0-alpha.6",
    "typescript": "^5.4.5"
  }
}
